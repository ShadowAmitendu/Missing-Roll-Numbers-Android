<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include all files in the app's private files directory -->
    <include domain="file" path="."/>

    <!-- Exclude temporary or cache files -->
    <exclude domain="file" path="temp/"/>
    <exclude domain="file" path="cache/"/>

    <!-- Include all shared preferences -->
    <include domain="sharedpref" path="."/>

    <!-- Exclude a specific shared preferences file -->
    <exclude domain="sharedpref" path="device.xml"/>

    <!-- Include specific files from external storage (if used) -->
    <include domain="external" path="my_backup_files/"/>
</full-backup-content>
